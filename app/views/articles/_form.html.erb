<div class="container">
  <%# we have to specify a folder if a partial is not in the same folder as _form partial %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%#  having model used will prepopulate inputs with article data, and once clicked to be updated, rails smart enough to direct a user to update action%>
      <%= form_with(model: @article, class: 'shadow p-3 mb-3 bg-secondary rounded', local: true) do |f|%>
        <div class="form-group row">
          <%= f.label :title, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.text_field :title, class: 'form-control shadow rounded text-dark', placeholder: 'Title of article' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, placeholder: 'Description of article', class: 'form-control shadow rounded text-dark' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            {prompt: "Make your selection from the list below (can be empty)"},
            {multiple: true, size: 3, class: 'custom-select shadow rounded'}) %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: 'btn btn-outline-light btn-lg' %>
        </div>

      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to article listings ]', articles_path, class: 'text-dark' %>
    </div>
  </div>
</div>
