<div class="container">
  <%# we have to specify a folder if a partial is not in the same folder as _form partial %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%#  having model used will prepopulate inputs with article data, and once clicked to be updated, rails smart enough to direct a user to update action%>
      <%= form_with(model: @user, class: 'shadow p-3 mb-3 bg-secondary rounded', local: true) do |f|%>
        <div class="form-group row">
          <%= f.label :username, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.text_field :username, class: 'form-control shadow rounded text-dark', placeholder: 'Enter a username' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.email_field :email, placeholder: 'Enter an email', class: 'form-control shadow rounded text-dark' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.password_field :password, placeholder: 'Choose a password', class: 'form-control shadow rounded text-dark' %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? 'Sign up' : 'Update Account', class: 'btn btn-outline-light btn-lg') %>
        </div>

      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to article listings ]', articles_path, class: 'text-dark' %>
    </div>
  </div>
</div>
